{
  "compilerOptions": {
    "declaration": true,
    "target": "es2017",
    "lib": ["es2019", "es2019.array"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
